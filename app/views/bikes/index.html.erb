<h1>Home Page for Bikes</h1>
<%= link_to "New Bike", new_bike_path %>

<%= render "share/search" %>
<div class="container mt-3">
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-4">
        <div class="card">
          <%= cl_image_tag bike.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-body">
            <h5 class="card-title"><%= bike.title %></h5>
            <div class="row">
              <div class="col">
                <p class="card-text"><%= bike.bike_type.capitalize%> <i class="bi bi-bicycle"></i></p>
              </div>
              <div class="col">
                <p class="card-text">Â£<%= bike.price%> <i class="fa-solid fa-coins"></i><p>
              </div>
            </div>
            <div>
              <a class="btn btn-primary" <%= link_to "More info", bike_path(bike) %>

              <a class="btn btn-warning" <%= link_to "Edit", edit_bike_path(bike) %>
              <a class="btn btn-danger" <%= link_to "Remove", bike_path(bike) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
