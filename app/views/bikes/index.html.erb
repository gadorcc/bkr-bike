<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8">
    <div class="row" id="filter">
<% bike_type = %w(Electric Road Mountain Folding Kids Hybrid City Trike All)%>
        <% bike_type.each do |type| %>
        <div class="col text-center">
          <% if type == 'All' %>
            <%= link_to type, bikes_path, class: "btn btn-primary mr-2" %>
          <% else %>
            <%= link_to type, bikes_path(query: type), class: "btn btn-light" %>
          <% end %>
        </div>
        <% end %>
  </div>
      <div class="row row-cols-1 row-cols-lg-3 g-2 g-lg-3">
        <%= render "share/card" %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="sticky-top" style="height: calc(100vh); top: 0px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
