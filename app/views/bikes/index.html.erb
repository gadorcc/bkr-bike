<div class="container">
  <h1 class="my-5">Bikes in your area</h1>
  <div class="container m-4">
    <div class="container flex">
      <div class="row">
        <% bike_type = %w(Electric Road Mountain Folding Kids Hybrid City Trike All)%>
        <% bike_type.each do |type| %>
        <div class="col text-center">
          <% if type == 'All' %>
            <%= link_to type, bikes_path, class: "btn btn-primary mr-2" %>
          <% else %>
            <%= link_to type, bikes_path(query: type), class: "btn btn-light" %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
   </div>
   <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
     <% @bikes.each do |bike| %>
       <div class="col-md-4">
         <div class="card">
          <% if cloudinary_url(bike.photo.key) %>
            <img src="<%= cloudinary_url(bike.photo.key) %>" class="card-img-top" alt="image">
          <% else %>
            <img src="https://www.bikehighway.com/media/catalog/product/cache/8dfd20b727bccb444e9ac19dde97c5ca/0/0/0002_balance_bike_-_mint_green_angled_1024x1024.jpg" class="card-img-top" alt="image">
          <% end %>
           <div class="card-body">
             <h5 class="card-title"><%= bike.title %></h5>
              <p class="d-inline-flex mb-3 px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2">
                <%= bike.bike_type %>
                </p>
             <p class="card-text">
                <br>
               <%= bike.description.truncate_words(25) %>
               <i class="bi bi-currency-pound"><%= bike.price %></i>
             </p>
             <div class="">
               <a href="<%= bike_path(bike) %>" class="btn btn-primary mr-2">View</a>
               <a href="<%= edit_bike_path(bike) %>" class="btn btn-secondary mr-2">Edit</a>
               <%# <%= link_to "Delete", bike_path(bike), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
             </div>
           </div>
         </div>
       </div>
     <% end %>
   </div>
 </div>

 <br>

 <div class="text-center my-5">
   <%= link_to 'Add Bike', new_bike_path, class: "btn btn-primary" %>
 </div>
